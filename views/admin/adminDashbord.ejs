<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sales Report Dashboard</title>
  <link rel="stylesheet" href="style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMR3Efiw2JHOjNBMO5h7jokWKejiWUVgEjfYFlQ" crossorigin="anonymous">
<style>
    * {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  font-family: Arial, sans-serif;
}

body {
  background-color: #fffbf3;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.dashboard-container {
  background-color: #fffbf3;
  color: #5d482f;
  padding: 20px;
  border-radius: 10px;
  width: 90%;
  max-width: 800px;
}

header {
  text-align: center;
  margin-bottom: 20px;
}

header h1 {
  font-size: 2rem;
  color: #5d482f;
}

.filter-section {
  display: flex;
  align-items: center;
  gap: 10px;
  justify-content: center;
  margin-top: 10px;
}

.filter-section label {
  font-weight: bold;
}

.filter-section select,
.filter-section .date-input,
.generate-btn {
  padding: 8px 12px;
  font-size: 1rem;
  border: 1px solid #5d482f;
  border-radius: 5px;
  color: #5d482f;
  background-color: #fffbf3;
  cursor: pointer;
}

.generate-btn {
  background-color: #5d482f;
  color: #fffbf3;
  border: none;
  display: flex;
  align-items: center;
  gap: 5px;
}

.generate-btn:hover {
  background-color: #7c6742;
}

.metrics {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15px;
  margin-top: 20px;
}

.metric-card {
  background-color: #ffd38d;
  color: #563310;
  padding: 15px;
  border-radius: 10px;
  text-align: center;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
}

.metric-card h3 {
  font-size: 1.2rem;
  margin-bottom: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 5px;
}

.metric-card p {
  font-size: 1.5rem;
  font-weight: bold;
}

.download-section {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-top: 30px;
}

.download-btn {
  background-color: #34210a;
  color: #fffbf3;
  padding: 10px 20px;
  font-size: 1rem;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 5px;
}

.download-btn:hover {
  background-color: #7c6742;
}

.date-input {
  display: none;
}

</style>
</head>
<body>
    <%- include('../partials/sidebar') %>

  <div class="dashboard-container">
    <header>
      <h1><i class="fas fa-chart-line"></i> Sales Report </h1>
      <div class="filter-section">
        <label for="report-type">Report Type:</label>
        <select id="report-type">
          <option value="day">1 Day</option>
          <option value="week">1 Week</option>
          <option value="month">1 Month</option>
          <option value="year">1 Year</option>
          <option value="custom">Custom Date Range</option>
        </select>
        <input type="date" id="start-date" class="date-input" placeholder="Start Date" style="display: none;">
        <input type="date" id="end-date" class="date-input" placeholder="End Date" style="display: none;">
        <button onclick="generateReport()" class="generate-btn"><i class="fas fa-sync-alt"></i> Generate Report</button>
      </div>
    </header>

    <section class="metrics">
      <div class="metric-card">
        <h3><i class="fas fa-shopping-cart"></i> Overall Sales Count</h3>
        <p id="sales-count"><%= report.overallSalesCount || 0 %></p>
      </div>
      <div class="metric-card">
        <h3><i class="fas fa-dollar-sign"></i> Total Revenue</h3>
        <p id="total-revenue">₹<%= report.totalRevenue || 0 %></p>
      </div>
      <div class="metric-card">
        <h3><i class="fas fa-tags"></i> Total Discount</h3>
        <p id="total-discount">₹<%= report.totalDiscount || 0 %></p>
      </div>
      <div class="metric-card">
        <h3><i class="fas fa-percentage"></i> Coupons Deduction</h3>
        <p id="coupons-deduction">₹<%= report.couponsDeduction || 0 %></p>
      </div>
    </section>

    <section class="download-section">
      <button onclick="downloadReport('pdf')" class="download-btn"><i class="fas fa-file-pdf"></i> Download PDF</button>
      <button onclick="downloadReport('excel')" class="download-btn"><i class="fas fa-file-excel"></i> Download Excel</button>
    </section>
  </div>

  <script>
    function downloadReport(format) {
            if(format == 'pdf'){
                window.location.href = `/admin-dashboard/download/pdf`;
            }else if(format === 'excel'){
                window.location.href = `/admin-dashboard/download/excel`;
            }
                }

  async function generateReport() {
  const reportType = document.getElementById("report-type").value;
  const startDate = document.getElementById("start-date").value;
  const endDate = document.getElementById("end-date").value;
  console.log(reportType);
  

  // Fetch the filtered report data from the server
  const response = await fetch(`/admin-dashboard/sales-report/${reportType}`, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ reportType, startDate, endDate })
  });
  const data = await response.json();

  // Display the fetched data in the report
  document.getElementById("sales-count").textContent = data.salesCount;
  document.getElementById("total-revenue").textContent = `₹${data.totalRevenue}`;
  document.getElementById("total-discount").textContent = `₹${data.totalDiscount}`;
  document.getElementById("coupons-deduction").textContent = `₹${data.couponsDeduction}`;
}

  </script>
</body>
</html>
