<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Detail - <%= book.bookDetails.book_name || 'This Time Tomorrow' %></title>
    <style>
        /* Global Styles */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
        }

        .container {
            max-width: 900px;
            margin-left: 280px;
            padding: 20px;
            border-radius: 8px;
        }

        /* Book Section Styles */
        .book-section {
            display: flex;
            gap: 20px;
            margin-bottom: 30px;
        }

        .book-cover img {
            width: 200px;
            height: auto;
            border-radius: 8px;
            object-fit: cover;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .book-details {
            flex-grow: 1;
        }

        .book-title {
            font-size: 28px;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }

        .author {
            font-size: 18px;
            color: #888;
            margin-bottom: 15px;
        }

        .rating {
            margin-bottom: 15px;
        }

        .rating span {
            color: #ffcc00;
            font-size: 20px;
        }

        .description {
            font-size: 16px;
            margin-bottom: 20px;
            color: #555;
        }

        .edit-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .edit-button:hover {
            background-color: #0056b3;
        }

        .edition-details {
            margin-top: 30px;
        }

        .edition-details h3 {
            font-size: 22px;
            margin-bottom: 10px;
            color: #333;
        }

        .edition-details p {
            font-size: 16px;
            color: #555;
            margin-bottom: 8px;
        }

        .edition-details strong {
            color: #333;
        }

        /* Zoom and Magnifier Styles */
        .zoom {
            position: relative;
            display: inline-block;
        }

        .original {
            cursor: crosshair;
            position: relative;
        }

        .zoom .viewer {
            position: absolute;
            top: 0;
            left: 100%;
            width: 300px; /* Width of the zoomed image */
            height: 300px; /* Height of the zoomed image */
            overflow: hidden;
            display: none; /* Hidden initially */
            border: 1px solid #ddd;
        }

        .zoom .viewer img {
            position: absolute;
            width: 100%; /* Adjust zoomed image size */
            height: auto;
        }

        .magnifier {
            position: absolute;
            background: rgba(255, 255, 255, 0.4);
            border: 1px solid black;
            width: 100px;
            height: 100px;
            display: none; /* Hidden initially */
            pointer-events: none;
        }

        .original:hover + .magnifier,
        .original:hover + .viewer {
            display: block;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .book-section {
                flex-direction: column;
                align-items: center;
                text-align: center;
            }

            .book-cover img {
                width: 150px;
            }

            .book-details {
                text-align: center;
            }

            .edit-button {
                margin-top: 15px;
            }
        }
    </style>
</head>
<body>
    <%- include('../partials/sidebar') %>
    <div class="container">
        <!-- Book Section -->
        <div class="book-section">
            <div class="zoom">
                <!-- Original Image -->
                <div class="original book-cover">
                    <img src="images/uploads/<%= book.bookDetails.coverImageName %>" id="target">
                </div>
                <!-- Zoomed Viewer -->
                <div class="viewer">
                    <img src="images/uploads/<%= book.bookDetails.coverImageName %>" alt="Zoomed Image">
                </div>
                <!-- Magnifier Effect -->
                <div class="magnifier"></div>
            </div>

            <div class="book-details">
                <h1 class="book-title"><%= book.bookDetails.book_name || '' %></h1>
                <p class="author"><%= book.bookDetails.author_name || 'Author Name' %></p>
                <div class="rating">
                    <span>&#9733;&#9733;&#9733;&#9733;&#9734;</span>
                </div>
                <p class="description"><%= book.bookDetails.about_book || 'No description available for this book.' %></p>
                <a id="<%= book._id %>" class="edit-button edit">Edit Book</a>
            </div>
        </div>

        <!-- Edition Details -->
        <div class="edition-details">
            <h3>This Edition</h3>
            <p><strong>Format:</strong> <%= book.bookDetails.pages || 'N/A' %> pages, Hardcover</p>
            <p><strong>Published:</strong> <%= book.bookDetails.published_date || 'Unknown' %> by <%= book.bookDetails.publisher_name || 'Unknown Publisher' %></p>
            <p><strong>Language:</strong> <%= book.bookDetails.language || 'Unknown' %></p>
        </div>
    </div>
    <%- include('../partials/footer') %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.original').mousemove(function(event) {
                var magnifier = $(this).next('.magnifier');
                var viewer = $(this).next('.viewer').find('img');

                var offset = $(this).offset();
                var x = event.pageX - offset.left;
                var y = event.pageY - offset.top;

                var posX = x / $(this).width() * 100;
                var posY = y / $(this).height() * 100;

                // Move the zoomed image
                viewer.css({
                    'transform-origin': `${posX}% ${posY}%`,
                    'transform': 'scale(2)' // Adjust the zoom scale here
                });

                // Position the magnifier on the image
                magnifier.css({
                    'top': y - magnifier.height() / 2,
                    'left': x - magnifier.width() / 2
                });
            });
        });
    </script>

    <script>
        document.querySelectorAll('.edit').forEach(button => {
            button.addEventListener('click', function() {
                const bookId = this.id;
                if (bookId) {
                    window.location.href = `/books/edit-book?bookId=${bookId}`;
                }
            });
        });
    </script>
</body>
</html>
