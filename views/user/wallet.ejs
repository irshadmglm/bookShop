<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book Shop Wallet</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    body {
      
      background-color: #fffbf3;
    }

    .wallet-container {
      width: 1000px; /* Increased width */
      padding: 20px;
      margin: 140px 100px 120px 280px;
      border-radius: 8px;
      background-color: #fff7e6;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .wallet-container h2 {
      font-size: 18px;
      color: #333;
      margin-bottom: 16px;
    }

    .balance-section {
      padding: 15px;
      background-color: #fff2cc;
      border-radius: 6px;
      margin-bottom: 20px;
    }

    .total-balance {
      display: flex;
      justify-content: space-between;
      font-size: 16px;
      font-weight: bold;
      color: #333;
      margin-bottom: 10px;
      border-bottom: 1px solid #d1c5a6;
      padding-bottom: 10px;
    }

    .transaction-type {
      font-size: 14px;
      color: #5d482f;
      margin: 10px 0;
      font-style: italic;
    }

    .add-balance {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-top: 10px;
    }

    .add-balance input {
      padding: 6px 8px;
      border: 1px solid #b8a98c;
      border-radius: 4px;
      font-size: 14px;
      width: 100%;
    }

    .add-balance button {
      padding: 6px 12px;
      background-color: #5d482f;
      color: white;
      border: none;
      border-radius: 4px;
      font-size: 14px;
      cursor: pointer;
    }

    .transaction-table {
      width: 100%; /* Increased table width */
      border-collapse: collapse;
      background-color: #fff2cc;
      border-radius: 6px;
      overflow: hidden;
    }

    .transaction-table th, .transaction-table td {
      padding: 10px 15px; /* Increased padding for better alignment */
      font-size: 14px;
    }

    .transaction-table th {
      background-color: #faebd7;
      color: #333;
      
    }

    .transaction-table td {
      border-top: 1px solid #e5d1a3;
    }

    .transaction-table tr:nth-child(even) {
      background-color: #fbf3df;
    }

    /* Aligning specific columns */
    .transaction-table td:first-child { /* Date column */
      width: 20%;
      text-align: center;

    }

    .transaction-table td:nth-child(2) { /* Type column */
      width: 30%;
      text-align: center;

    }

    .transaction-table td:nth-child(3) { /* Amount column */
      width: 25%;
      text-align: center;

    }

    .transaction-table td:nth-child(4) { /* Status column */
      text-align: center;
      width: 25%;
    }
  </style>
</head>
<body>
    <%- include('../partials/userHeader') %>
    <%- include('../partials/usersSidebar') %>
  <div class="wallet-container">
    <h2>Book Shop Wallet</h2>
    
    <div class="balance-section">
      <div class="total-balance">
        <span>Total balance</span>
        <span>₹ <%= wallet.totalBalance %></span>
      </div>
    </div>

    <table class="transaction-table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Type</th>
          <th>Amount</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        
         <% wallet.data.forEach((wal)=>{ %>
            <tr>
          <td><%= wal.addedAt.toDateString()  %></td>
          <td><%= wal.type %></td>
          <td>₹<%= wal.amount %></td>
          <td><%= wal.status %></td>
        </tr>
          <% }) %>
         
        
    
      </tbody>
    </table>
  </div>
</body>
</html>
