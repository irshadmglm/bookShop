<body>
    <%- include('../partials/userHeader') %>
    <%- include('../partials/userSidebar') %>

    <div class="container">
        <div class="container">
            <%- include('../partials/breadcrumb', { breadcrumbs: breadcrumbs }) %> 
           
          </div>
          
        <div class="book-gallery">
            <!-- Thumbnail Images -->
            <div class="thumbnails">
                <img src="/images/uploads/<%= book.bookDetails.coverImageName || '' %>" alt="Book Image 1" onclick="changeImage('/images/uploads/<%= book.bookDetails.coverImageName %>')">
                <img src="/images/uploads/<%= book.bookDetails.backImageName  || '' %>" alt="Book Image 2" onclick="changeImage('/images/uploads/<%= book.bookDetails.backImageName %>')">
                <img src="/images/uploads/<%= book.bookDetails.contentImageName || '' %> " alt="Book Image 3" onclick="changeImage('/images/uploads/<%= book.bookDetails.contentImageName %>')">
            </div>
            <!-- Main Display Image -->
            <div class="main-image">
                <div class="zoom">
                    <!-- Original Image -->
                    <div class="original book-cover">
                        <img id="main-book-image" src="/images/uploads/<%= book.bookDetails.coverImageName %>" alt="Main Image">
                    </div>
                    <!-- Zoomed Viewer -->
                    <div class="viewer">
                        <img id="zoomed-book-image" src="/images/uploads/<%= book.bookDetails.coverImageName %>" alt="Zoomed Image">
                    </div>
                    <!-- Magnifier Effect -->
                    <div class="magnifier"></div>
