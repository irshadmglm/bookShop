                     <h2>This item currently Out of Stock</h2>
                    <% } %>
                                   
                <div class="ratingavarage" stars="<%= book.average_rating || 0 %>">
                    <span class="star">â˜…</span>
                    <span class="star">â˜…</span>
                    <span class="star">â˜…</span>
                    <span class="star">â˜…</span>
                    <span class="star">â˜…</span>
                </div>
               
                <div class="buttons">
                    <button class="add-to-cart">Add to cart</button>
                    <button class="buy-now">Buy now</button>
                </div>
            </div>
        </div>

        <p class="summary">
            <%= book.bookDetails.about_book || '' %>
        </p>
        <div class="edition-info">
            <p><strong>This edition</strong></p>
            <ul>
                <li><%= book.bookDetails.pages || 'N/A' %> pages, Hardcover</li>
                <li><%= book.bookDetails.published_date || 'Unknown' %> by <%= book.bookDetails.publisher_name || 'Unknown Publisher' %></li>
                <li><%= book.bookDetails.language || 'Unknown' %></li>
            </ul>
        </div>

       
            <div class="related-products-section">
                <h2>Related Products</h2>
                
                <!-- Slider Container -->
                <div class="slider-container">
                  <button class="slider-btn prev-btn" onclick="slideLeft()">&#10094;</button> <!-- Left arrow -->
                  
                  <div class="book-container" id="related-books-slider">
                    <% relatedBooks.slice(0, 10).forEach(function(book) { %> <!-- Adjust number of books -->
                      <div class="book-card" data-id="<%= book._id %>">
                        <img src="/images/uploads/<%= book.bookDetails.coverImageName %>" alt="Book Cover" class="book-image">
                        <div class="book-info">
