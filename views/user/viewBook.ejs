        </div>
    </div>

    




    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
       let stars = 0;

function addRating(n) {
    for (let i = 1; i <= 5; i++) {
        document.getElementById(`star-${i}`).classList.remove('gold');
        document.getElementById(`star-${i}`).innerHTML = 'â˜†'; 
    }
    for (let i = 1; i <= n; i++) {
        document.getElementById(`star-${i}`).classList.add('gold');
        document.getElementById(`star-${i}`).innerHTML = 'â˜…'; 
    }
    stars = n; 
}

// Add click event listener for the submit button
document.querySelector('.submit-btn').addEventListener('click', function() {
    const bookId = this.getAttribute('data-book-id');
    const review = document.getElementById('review').value;

    fetch(`/userbook/rating`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ stars, bookId, review })
    })
    .then(response => response.json())
    .then(data => {
        console.log('Rating submitted:', data);
        alert("Your rating has been successfully submitted!");
    })
    .catch(error => {
        console.error('Error submitting rating:', error);
    });
});

document.addEventListener("DOMContentLoaded", () => {
    let ratingElements = document.querySelectorAll('.ratingavarage');
    ratingElements.forEach(ratingElement =>{
        let stars = parseFloat(ratingElement.getAttribute('stars')); 
    console.log(stars);
    
    let starSpans = ratingElement.getElementsByClassName('star'); 
    
    for (let i = 0; i < starSpans.length; i++) {
        if (i < stars) {
            starSpans[i].classList.add('gold');
        } else {
            starSpans[i].classList.remove('gold'); 
        }
    }
    })
});



       
        function changeImage(imageSrc) {
            document.getElementById('main-book-image').src = imageSrc;
            document.getElementById('zoomed-book-image').src = imageSrc;
        }

        $(document).ready(function() {
            $('.original').mousemove(function(event) {
                var magnifier = $(this).next('.magnifier');
                var viewer = $(this).next('.viewer').find('img');

                var offset = $(this).offset();
                var x = event.pageX - offset.left;
                var y = event.pageY - offset.top;

                var posX = x / $(this).width() * 100;
                var posY = y / $(this).height() * 100;

                // Move the zoomed image
                viewer.css({
                    'transform-origin': `${posX}% ${posY}%`,
                    'transform': 'scale(2)' // Adjusted the zoom scale for better effect
                });

                // Position the magnifier on the image
                magnifier.css({
                    'top': y - magnifier.height() / 2,
                    'left': x - magnifier.width() / 2,
                    'display': 'block'
                });

                // Show viewer when mouse is over the image
                $(this).next('.viewer').show();
            });

            $('.original').mouseleave(function() {
                $(this).next('.magnifier').hide();
                $(this).next('.viewer').hide();
            });
        });


        const slider = document.getElementById('related-books-slider');

function slideLeft() {
  slider.scrollBy({
    top: 0,
    left: -slider.offsetWidth,
    behavior: 'smooth'
  });
}

function slideRight() {
  slider.scrollBy({
    top: 0,
    left: slider.offsetWidth,
    behavior: 'smooth'
  });
}
    </script>
