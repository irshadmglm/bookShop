                          <div class="price">
                            <span class="current-price">â‚¹<%= book.bookDetails.price || '' %></span>
                            <span class="original-price">â‚¹<%= book.bookDetails.original_price || '' %></span>
                          </div>
                          <div class="discount"><%= book.bookDetails.discount || '' %> off</div>
                          <div class="free-delivery">Free Delivery</div>
